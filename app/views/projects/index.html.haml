.container
  .row
    .col-md-6
      %h3
        = link_to 'Create a new Project', new_project_path

    .col-md-6
      .row
        .col-xs-12
          %h3 Find a Project
      .row
        = bootstrap_form_tag url: find_projects_path, method: 'get' do |f|
          .col-md-6.col-lg-5
            = f.text_field :name
          .col-md-6.col-lg-5
            = f.text_field :pin
          .col-xs-12.col-lg-2
            .form-group
              .hidden-md-down
                %label.control-label 
                  &nbsp;
              = f.submit "Find"



- if @projects.any?
  %h1 Your projects

  %table
    %thead
      %tr
        %th Name
        %th Pin
        %th
        %th
        %th

    %tbody
      - @projects.each do |project|
        %tr
          %td= project.name
          %td= project.pin
          %td= link_to 'Show', project
          %td= link_to 'Edit', edit_project_path(project)
          %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

