.container.project
  .row.project--info
    .col-md-6
      %h2= @project.name
      %strong Pin:
      = @project.pin
    .col-md-6
      = link_to 'Edit', edit_project_path(@project)
      
  .row
    .col-sm-8
      %h3 Activity Checklist
    .col-sm-4
      %h3 Task Groups
      = link_to 'Select Tasks', select_tasks_project_path(@project)
      .task-list
        %ul
          - @tasks.each do |t|
            %li{class: "task task--#{t.status}"}
              = link_to t.name, project_task_path(t.project, t)
