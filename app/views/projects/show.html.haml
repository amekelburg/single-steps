.container.project
  .row.project--info
    .col-md-6
      %h2= @project.name
      .project-detail
        %strong Pin:
        = @project.pin
      .project-detail
        %strong Project Team Contact Email:
        = @project.email
    .col-md-6
      = link_to 'Edit', edit_project_path(@project)
      
  .row
    .col-sm-6
      %h3 Activity Checklist
    .col-sm-6
      .row
        .col-sm-6
          %h3 Task Groups
        .col-sm-6
          = link_to 'Change Selections', select_tasks_project_path(@project)
      .task-list#top-level-task-groups
        %ul
          - @tasks.each do |t|
            %li{class: "task task--#{t.status} task--group"}
              = link_to t.name, project_task_path(t.project, t)
