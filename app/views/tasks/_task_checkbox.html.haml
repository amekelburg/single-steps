- label = label || nil
- skip_remote = skip_remote || false
- if task.completable?
  = form_for [task.project, task], :html=>{class: "task__checkbox #{label ? 'task__checkbox--labeled' : ''}"}, remote: !skip_remote, :authenticity_token => true do |f|
    = f.check_box "task_#{task.id}_complete?", onclick: 'SingleSteps.showWait(); $(this.form).submit()', checked: task.complete?
    - if label
      = f.label "task_#{task.id}_complete?", label
- else
  %span.task__checkbox--sub